{{!< default}}

{{#contentFor 'htmlLang'}}{{@site.locale}}{{/contentFor}}

{{#contentFor 'styles'}}
    <link rel="stylesheet" type="text/css"  href="{{asset "css/pagination.css"}}" />
{{/contentFor}}

{{#contentFor 'title'}}Coffee ❤️ - Stories and tutorials for all kind of coders - {{@site.title}}{{/contentFor}}

<div class="mds-page">
    <div class="mds-container">
        {{#tag}}
        <header class="mds-header">
            <h1 class="mds-title">Coffee</h1>
            <p>
                {{#if description}}
                    {{description}}
                {{else}}
                    A collection of {{plural ../pagination.total empty='posts' singular='% post' plural='% posts'}}
                {{/if}}
            </p>
            <p>If your looking for <a href="/reviews/">our coffeeshop reviews</a>, follow the link.</p>
        </header>
        {{/tag}}

        <div class="mds-postfeed">
        {{#foreach posts}}
            {{> "card"}}
        {{/foreach}}
        </div>

        {{pagination}}
    </div>
</div>