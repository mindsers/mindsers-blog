{{!< default}}

{{#contentFor 'htmlLang'}}{{@site.locale}}{{/contentFor}}

{{#contentFor 'styles'}}
    <link rel="stylesheet" type="text/css"  href="{{asset "css/pagination.css"}}" />
{{/contentFor}}

{{#is "enposts"}}
    {{> "english/index"}}
{{else is "frposts"}}
    {{> "french/index"}}
{{else is "enreviews"}}
    {{> "english/review-index"}}
{{else is "frreviews"}}
    {{> "french/review-index"}}
{{else}}
    {{#contentFor 'meta'}}
        {{#is "issues"}}
            <link rel="alternate" type="application/rss+xml" title="Mindsers Blog Newsletter - All English issues" href="{{@site.url}}/en/issues/rss/">
        {{else is "frissues"}}
            <link rel="alternate" type="application/rss+xml" title="Mindsers Blog Newsletter - All French issues" href="{{@site.url}}/fr/issues/rss/">
        {{/is}}
    {{/contentFor}}

    <div class="mds-page">
        <div class="mds-container">
            <header class="mds-header">
            {{#is "enissues"}}
                {{#contentFor 'title'}}Numéro en anglais de la newsletter du Mindsers Blog - {{meta_title}}{{/contentFor}}
                <h1 class="mds-title">Tous les numéros du Mindsers Blog Insider (anglais)</h1>
                <p>
                    <a class="button" href="/fr/issues/">Voir les numéros en français</a>
                </p>
            {{else is "frissues"}}
                {{#contentFor 'title'}}Numéro en français de la newsletter du Mindsers Blog - {{meta_title}}{{/contentFor}}
                <h1 class="mds-title">Tous les numéros du Mindsers Blog Insider (français)</h1>
                <p>
                    <a class="button" href="/issues/">Voir les numéros en anglais</a>
                </p>
            {{else is "emails"}}
                {{#contentFor 'title'}}Archives d'emails - {{meta_title}}{{/contentFor}}
                <h1 class="mds-title">Archives d'emails</h1>
            {{else}}
                {{#contentFor 'title'}}Articles - {{meta_title}}{{/contentFor}}
                <h1 class="mds-title">Articles</h1>
            {{/is}}
            </header>

            <div class="mds-postfeed">
            {{#foreach posts}}
                {{> "card"}}
            {{else}}
                    <p class="no-post">Aucun article ici</p>
            {{/foreach}}
            </div>

            {{pagination}}
        </div>
    </div>
{{/is}}
