{{!< default}}

{{#contentFor 'htmlLang'}}{{@site.locale}}{{/contentFor}}

{{#contentFor 'styles'}}
    <link rel="stylesheet" type="text/css"  href="{{asset "css/pagination.css"}}" />
{{/contentFor}}

{{#is "posts"}}
    {{> "english/index"}}
{{else is "frposts"}}
    {{> "french/index"}}
{{else}}
    {{#contentFor 'meta'}}
        {{#is "issues"}}
            <link rel="alternate" type="application/rss+xml" title="Mindsers Blog Newsletter - All English issues" href="{{@site.url}}/issues/rss/">
        {{else is "frissues"}}
            <link rel="alternate" type="application/rss+xml" title="Mindsers Blog Newsletter - All French issues" href="{{@site.url}}/fr/issues/rss/">
        {{/is}}
    {{/contentFor}}

    <div class="mds-page">
        <div class="mds-container">
            <header class="mds-header">
            {{#is "issues"}}
                {{#contentFor 'title'}}English Newsletter Issues - {{meta_title}}{{/contentFor}}
                <h1 class="mds-title">Mindsers Blog Insider issues</h1>
                <p>
                    As additional content, Mindsers Blog Insiders will provide you with:
                    stats, news about Mindsers Blog and my other projects,
                    additional tech and business tips, and my favorite reads of the month.
                </p>
                <p>
                    {{#unless @member.paid}}
                        <a class="button highlighted" href="/newsletter/">Subscribe !</a>
                    {{/unless}}
                    <a class="button" href="/fr/issues/">See French issues</a>
                </p>
            {{else is "frissues"}}
                {{#contentFor 'title'}}French Newsletter Issues - {{meta_title}}{{/contentFor}}
                <h1 class="mds-title">Mindsers Blog Insider issues in French</h1>
                <p>
                    As additional content, Mindsers Blog Insiders will provide you with:
                    stats, news about Mindsers Blog and my other projects,
                    additional tech and business tips, and my favorite reads of the month.
                </p>
                <p>
                    {{#unless @member.paid}}
                        <a class="button highlighted" href="/newsletter/">Subscribe !</a>
                    {{/unless}}
                    <a class="button" href="/issues/">See English issues</a>
                </p>
            {{else is "emails"}}
                {{#contentFor 'title'}}Emails archives - {{meta_title}}{{/contentFor}}
                <h1 class="mds-title">Emails archives</h1>
            {{else}}
                {{#contentFor 'title'}}Posts - {{meta_title}}{{/contentFor}}
                <h1 class="mds-title">Posts</h1>
            {{/is}}
            </header>

            <div class="mds-postfeed">
            {{#foreach posts}}
                {{> "card"}}
            {{else}}
                    <p class="no-post">No posts here</p>
            {{/foreach}}
            </div>

            {{pagination}}
        </div>
    </div>
{{/is}}
