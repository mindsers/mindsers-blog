                        <p class="notices">No spam ever. Unsubscribe in a single click at any time.</p>
                    </section>
                </div>
            </div>
            {{/match}}
            {{/foreach}}
            {{/if}}
        </div>
        {{/get}}
        <script>
            const discountCalculationSpans = document.querySelectorAll('.discount-calculation')

            for (const span of discountCalculationSpans) {
                const discounted = span.dataset.costYearly
                const yearly = span.dataset.costMonthly * 12

                const discount = 100 * ((yearly / 100) - (discounted / 100)) / (yearly / 100)

                if (discount == 0) {
                    span.parentElement.parentElement.remove()
                    continue
                }

                const percentage = Math.ceil(discount)
                const raw = Math.ceil(span.dataset.costMonthly * 12 - discounted)

                if (percentage >= raw) {
                    span.textContent = `${percentage}%`
                    continue
                }

                span.textContent = `€${raw}`
            }

            const monthlyCalculationSpans = document.querySelectorAll('.monthly-calculation')
            for (const span of monthlyCalculationSpans) {
                const monthly = span.dataset.costYearly / 12

                span.textContent = `€${monthly.toFixed(2)}`
            }

            const toggle = document.getElementById('yearly-switch')
            const plans = document.querySelectorAll('.mds-plan-grid .mds-container')
            toggle.addEventListener('change', event => {
                if (event.target.checked) {
                    for (const plan of plans) {
                        plan.dataset.plan = 'yearly'
                    }

                    return
                }

                for (const plan of plans) {
                    plan.dataset.plan = 'monthly'
                }
            })
        </script>
    </section>

