                            <li class='yearly-plan-data'>✓ <strong>Get an extra <span class="discount-calculation"
                                        data-cost-yearly="{{price yearly_price}}"
                                        data-cost-monthly="{{price monthly_price}}"></span>
                                    discount</strong></li>
                            {{/if}}
                        </ul>
                    </section>

                    <section class='plan-price'>
                        {{#if monthly_price}}
                        <a
                            class='button highlighted monthly-plan-data'
                            href="https://club.mindsers.blog/checkout/mindsers-club-pro"
                            {{!-- href="javascript:"
                            data-portal="signup/{{id}}/monthly"
                            data-members-cancel="/membership/" --}}
                        >
                            Subscribe now
                        </a>
                        {{/if}}
                        {{#if yearly_price}}
                        <a
                            class='button highlighted yearly-plan-data'
                            href="https://club.mindsers.blog/checkout/mindsers-club-pro"
                            {{!-- href="javascript:"
                            data-portal="signup/{{id}}/yearly"
                            data-members-cancel="/membership/" --}}
                        >
                            Subscribe now
                        </a>
