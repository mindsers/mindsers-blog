                        {{else if @member}}
                        <a href="#" class='button disabled'>Current plan</a>
                        {{else}}
                        <a href="/signup/" class='button'>Subscribe now</a>
                        {{/if}}
                        <p class="notices">No spam ever. Unsubscribe in a single click at any time.</p>
                    </section>
                </div>
            </div>
            {{else}}
            <div class='plan-container highlighted bg-height-variable'>
                <div class='plan-bg'>
                    <header>
                        <h2>{{name}}</h2>
                        {{#if monthly_price}}
                        <span class='monthly-plan-data'>{{price monthly_price currency=currency}} <span class="period">/
                                month</span></span>
                        {{/if}}
                        {{#if yearly_price}}
                        <span class='yearly-plan-data'>{{price yearly_price currency=currency}} <span class="period">/
